<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.onestepback.repository.FeedLikeMapper">

    <insert id="insert">
        INSERT INTO TBL_FEED_LIKE (FEED_ID, MEMBER_ID)
        VALUES (#{feedId}, #{memberId})
    </insert>

    <delete id="delete">
        DELETE FROM TBL_FEED_LIKE
        WHERE FEED_ID = #{feedId} AND MEMBER_ID = #{memberId}
    </delete>

    <select id="exists" resultType="_boolean">
        SELECT COUNT(*)
        FROM TBL_FEED_LIKE
        WHERE FEED_ID = #{feedId} AND MEMBER_ID = #{memberId}
    </select>

</mapper>